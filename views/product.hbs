<div class="container mt-5 mb-5">
    <h3>Agregar producto</h3>
    <hr>
    <form action="/api/product" method="POST">
        <div class="container">
            <div class="form-group">
                <label for="Nombre">Nombre</label>
                <input type="text" class="form-control" value="" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" class="form-control" value="" placeholder="Introduce a price" name="price">
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" id="category" name="category">

                    <option>Computers</option>
                    <option>Phones</option>
                    <option>Accesories</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" value="" placeholder="Write a description" name="description">
            </div>
            <div class="form-group">
                <label for="picture">Picture</label>
                <input type="text" class="form-control" value="" placeholder="Url for your avatar" name="picture">
            </div>
            <p align="center" class="pt-3"><button type="submit" class="btn btn-primary">Guardar</button></p>
        </div>
    </form>
</div>